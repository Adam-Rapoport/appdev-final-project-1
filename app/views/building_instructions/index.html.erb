<div>
  <div>
    <h1>
      List of all building instructions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new building instruction
    </h2>

    <form action="/insert_building_instruction" method="post">
      <div>
        <label for="building_type_name_box">
          Building type name
        </label>

        <input type="text" id="building_type_name_box" name="query_building_type_name">
      </div>

      <div>
        <label for="points_value_box">
          Points value
        </label>

        <input type="text" id="points_value_box" name="query_points_value">
      </div>

      <div>
        <label for="steel_cost_box">
          Steel cost
        </label>

        <input type="text" id="steel_cost_box" name="query_steel_cost">
      </div>

      <div>
        <label for="clay_cost_box">
          Clay cost
        </label>

        <input type="text" id="clay_cost_box" name="query_clay_cost">
      </div>

      <div>
        <label for="grain_cost_box">
          Grain cost
        </label>

        <input type="text" id="grain_cost_box" name="query_grain_cost">
      </div>

      <div>
        <label for="steel_drop_prob_box">
          Steel drop prob
        </label>

        <input type="text" id="steel_drop_prob_box" name="query_steel_drop_prob">
      </div>

      <div>
        <label for="clay_drop_prob_box">
          Clay drop prob
        </label>

        <input type="text" id="clay_drop_prob_box" name="query_clay_drop_prob">
      </div>

      <div>
        <label for="grain_drop_prob_box">
          Grain drop prob
        </label>

        <input type="text" id="grain_drop_prob_box" name="query_grain_drop_prob">
      </div>

      <div>
        <label for="buildings_count_box">
          Buildings count
        </label>

        <input type="text" id="buildings_count_box" name="query_buildings_count">
      </div>

      <button>
        Create building instruction
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Building type name
        </th>

        <th>
          Points value
        </th>

        <th>
          Steel cost
        </th>

        <th>
          Clay cost
        </th>

        <th>
          Grain cost
        </th>

        <th>
          Steel drop prob
        </th>

        <th>
          Clay drop prob
        </th>

        <th>
          Grain drop prob
        </th>

        <th>
          Buildings count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_building_instructions.each do |a_building_instruction| %>
      <tr>
        <td>
          <%= a_building_instruction.id %>
        </td>

        <td>
          <%= a_building_instruction.building_type_name %>
        </td>

        <td>
          <%= a_building_instruction.points_value %>
        </td>

        <td>
          <%= a_building_instruction.steel_cost %>
        </td>

        <td>
          <%= a_building_instruction.clay_cost %>
        </td>

        <td>
          <%= a_building_instruction.grain_cost %>
        </td>

        <td>
          <%= a_building_instruction.steel_drop_prob %>
        </td>

        <td>
          <%= a_building_instruction.clay_drop_prob %>
        </td>

        <td>
          <%= a_building_instruction.grain_drop_prob %>
        </td>

        <td>
          <%= a_building_instruction.buildings_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_building_instruction.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_building_instruction.updated_at) %> ago
        </td>

        <td>
          <a href="/building_instructions/<%= a_building_instruction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
