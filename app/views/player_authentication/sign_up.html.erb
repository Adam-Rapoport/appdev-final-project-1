  <div>
    <label for="grain_amount_box">Grain amount</label>
      
    <input type="text" id="grain_amount_box" name="query_grain_amount">
  </div>
         
  <div>
    <label for="points_box">Points</label>
      
    <input type="text" id="points_box" name="query_points">
  </div>
         
  <div>
    <label for="buildings_count_box">Buildings count</label>
      
    <input type="text" id="buildings_count_box" name="query_buildings_count">
  </div>
         
  <div>
    <label for="sent_requests_count_box">Sent requests count</label>
      
    <input type="text" id="sent_requests_count_box" name="query_sent_requests_count">
