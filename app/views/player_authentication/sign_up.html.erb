<h1>Sign up for Diplomacy!</h1>

<form action="/insert_player" method="post">

  <div>
    <label for="email_box">Player email</label>
    <input id="email_box" name="query_email" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="name_box">Name yourself</label>
      
    <input type="text" id="name_box" name="query_name">
  </div>
         
  <div>
    <label for="kingdom_box">Name your kingdom</label>
      
    <input type="text" id="kingdom_box" name="query_kingdom">
  </div>
         
